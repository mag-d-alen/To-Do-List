<%- include("header") -%>
    <div class="box" id="heading">
        <h1> <%=listTitle%> </br>Today's To-Do List </h1>
    </div>

    <div class="box">
        <%    for (var i=0; i<addedItems.length; i++){  %>
        <div class="item">
            <input type="checkbox">
            <p>
                <%=addedItems[i]%>
            </p>
        </div>
        <%   } %>

        <form class="item" method="post" action="/">
            <input type="text" name="addedItems" placeholder="Type here">
            <button type="submit" name="list" value=<%=listTitle%>>+</button>
        </form>

    </div>
<%- include ("footer") -%>