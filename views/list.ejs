<%- include("header") -%>
    <div class="box" id="heading">
        <h1> <%= title %> </br>Today's To-Do List </h1>
    </div>

    <div class="box">
        <%    for (var i=0; i<addItems.length; i++){  %>
        <div class="item">
            <input type="checkbox">
            <p>
                <%= addItems[i] %>
            </p>
        </div>
        <%   } %>

        <form class="item" method="post" action="/">
            <input type="text" name="addItems" placeholder="Type here">
            <button type="submit" name="list" value= <%= title %> >+</button>
        </form>

    </div>
<%- include ("footer") -%>